{
	"manifest_version": 2,

	"name": "Podium",
	"description": "Nominate directly to Podium",
	"version": "1.2.2",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Nominate to Podium"
	},

	"permissions": [
		"tabs", 
		"<all_urls>"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval' https://api.embed.ly; object-src 'self'"
}
