<div class="campaign-box">
	<h4><%= @campaign.title %></h4>
	<div class="row">
		<%= image_tag @campaign.image, class: "logo img-responsive clip", id: "campaign-img" %>
	</div>
	<div class="row">
		<h5 class="col-xs-9 small box-content-pitch" ><!-- <i class="fa fa-quote-left fa-pull-left fa-border"></i> -->
		<%= @campaign.description %></h5>
		<div class="col-xs-3" style="padding:0px;">
			<img class="col-xs-6 box-content-icon img-circle <%= @campaign.user.name %>" src=<%=getFacebookPicURL(@campaign.user)%>>
			<img class="col-xs-6 box-content-icon " src="<%=Crowdfunding_site.all[@campaign.crowdfunding_site_id-1].logo%>">
			<hr class="row" style="margin:0px; width:60px; margin-top:42px; border-width: 3px;">
			<hr class="row" style="margin:0px; width:60px; margin-top:6px; border-width: 3px;">
		</div>
	</div>
	<!-- <hr style="margin:0px; border-color: #385559; border-width: 3px;"> -->
	<small class="row text-center">Added by: <b><%= @campaign.user.name %></b></small>
</div>