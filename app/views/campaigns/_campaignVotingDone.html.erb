<script>$('#campaign').data('step', <%= current_user.isOnStep %>);</script>

<div class="row container text-center step-indicator">
    <div class="col-xs-3 pull-left start-step">Step 1</div>
    <div class="col-xs-2 col-centered step">Step 2</div>
    <div class="col-xs-2 col-centered step">Step 3</div>
    <div class="col-xs-2 col-centered step">Final Vote</div>
    <div class="col-xs-3 pull-right current-end-step">Finished!</div>
</div>

<div class="container" id="vote-campaigns">
