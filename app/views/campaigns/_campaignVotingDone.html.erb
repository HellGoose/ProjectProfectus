					<% if c == @votedFor[0].campaign %>
						<span class="voting-done glyphicon glyphicon-star" aria-hidden="true"></span>
					<% else %>
						<span class="voting-done glyphicon glyphicon-star-empty" aria-hidden="true"></span>
					<% end %>
				</a>
			</div>
			<div class="campaign campaign-vote" id="<%= i %>" style="border: 0px;">
				<% i += 1 %>
				<div class="campaign-box">
					<div class="image-container">
						<%= image_tag c.image, class: "logo img-responsive clip", id: "vote-img" %>
					</div>
					<h4 id="campaign-title"><%= c.title %></h4>
