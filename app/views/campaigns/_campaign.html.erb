<div class="text-center" id="background-blur" style="background-image:url(<%=@campaign.image%>);"></div>
<div class="container" id="campaign-content">
	<div class="col-xs-12 main_campaign">
		<div class="image_container2">
			<%= image_tag @campaign.image, class: "logo img-responsive" %>
		</div>
		<div class="edit">
			<% if @campaign.user_id == session[:user_id] || isAdmin %>
				<%= link_to "Edit |", edit_campaign_path(@campaign)%> 
				<%= link_to "Delete", @campaign, method: :delete, data: {confirm: "Are you sure?"} %>
			<% end %>
		</div>
		<div class="container">
			<h2 id="campaign-title"><%= @campaign.title %></h2><h5>By <b><%= @campaign.author.split(" ")[0..1].join(" ") %></b></h5> <!-- Fix plz -->
			<div class="campaign-info">
				<div class="row">
					<div class="col-xs-4" id="campaign-info-box"><h5>Global Score</h5><%= @campaign.globalScore %></div>
					<div class="col-xs-4" id="campaign-info-box"><h5>Round Score:</h5><%= @campaign.roundScore %></div>
					<div class="col-xs-4" id="campaign-info-box"><h5>Times seen in voting this round</h5><%= @campaign.timesShownInVoting %></div>
				</div>

				<div class="row">
					<div class="col-xs-4" id="campaign-info-box"><h5>Pledged</h5 ><%= @campaign.pledged %></div>
					<div class="col-xs-4" id="campaign-info-box"><h5>Goal</h5><%= @campaign.goal %></div>
					<div class="col-xs-4" id="campaign-info-box"><h5>Backers</h5><%= @campaign.backers %></div>
				</div>

				<div class="row">
					<h5>
						Added to Podium by <%= link_to User.find(@campaign.user_id).name, user_path(User.find(@campaign.user_id))%>
						from <%= @campaign.link.split("https://www.").join.split(".com").first.capitalize %> 
						on <%= @campaign.created_at.strftime("%B %d, %Y") %>
					</h5>
				</div>
			</div>
			<h5>end_time <%= @campaign.end_time %></h5>
			<p><%= link_to "Go to Campaign Site", @campaign.link, class: "btn btn-primary", id: "campaign-link", target: "_blank" %></p>
			<div id="social_media">
					<%= social_share_button_tag(@campaign.title, :popup => "true", :image => @campaign.image, desc: @campaign.description) %>
			</div>
			<%= render inline: @campaign.content %>
			<p id="campaign-description" ><%= @campaign.description %></p>
		</div>
	</div>
</div>
