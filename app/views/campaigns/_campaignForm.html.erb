<%= form_for(@campaign) do |f| %>
  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul>
      <% @campaign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= f.label "Campaign Link" %>
      <%= f.text_field :link, class: "form-control", placeholder: "Enter campaign link" %>
    </div>
    <div class="form-group" style="display: none;">
      <%= f.label :category_id, "Category" %>
      <%= f.collection_select(:category_id, Category.all, :id, :name) %>
    </div>
    <div class="form-group">
      <%= f.label :description, "Pitch" %>
      <%= f.text_field :description, class: "form-control", id: "description-field", maxLength: 90, placeholder: "Why do you believe that this will make a difference?" %>
    </div>
    <div class="form-group" style="display: none;">
      <%= f.text_field :title, class: "form-control", id: "title-field" %>
    </div>
    <div class="form-group" style="display: none;">
      <%= f.text_field :image, class: "form-control", id: "image-field" %>
    </div>
    <div class="col-xs-12" id="preview">
      <div class="image_container">
        <img id="campaign-image"></img>
      </div>

      <div class="text_container">
        <h3 id="campaign-title"></h3>
        <p id="campaign-description" ></p>
      </div>
    </div>
    <%= f.submit "Add Campaign", class: "btn btn-primary", id: "submitButton", disabled: true %>
  </form>

<% end %>
