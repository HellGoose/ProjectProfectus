<div class="text-center">
	<% if current_user %>
		<div id="mobile_welcome">
			<h3>Welcome to Podium!</h3>
		</div>
		<div id="mobile_login">
			<h4>You are logged in as:</h4>
			<img class="img-responsive" src="<%= getPic(current_user) %>">
			<h4><%= current_user.name %></h4>
			<a class="btn btn-primary" href="/signout?mobile=1">Log out</a>
		</div>
	<% else %>
		<div id="mobile_welcome">
			<h3>Welcome to Podium!</h3>
		</div>
		<div id="mobile_login">
			<%= image_tag "icon.png" %>
			<h4>In order to use Podium, you have to login with your Facebook account.</h4>
			<a class="btn btn-primary" href="/auth/facebook?mobile=1">Login using Facebook</a>
		</div>
	<% end %>
</div>
