<!DOCTYPE html>
<html>
<head>
	<title>Profectus</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div id="wrap">
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">Profectus</a>
				</div>

				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav navbar-right" id="menu">
						<li><a href="/projects">Projects</a></li>
						<li><a href="/about/index">About</a></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
							<% if current_user %>
							<%= current_user.name %>
							<% else %>
							Login
							<% end %>
							<span class="caret"></span></a>
							<ul class="dropdown-menu" role="menu">
								<li><%= link_to "Login using Facebook", "/auth/facebook", id: "facebook_login", role: "menuitem" %></li>
								<li><%= link_to "Login using Google", "/auth/google", id: "google_login", role: "menuitem" %></li>
								<li><%= link_to "Account", "/users/user", id: "account", role: "menuitem" %></li>
								<li class="divider"></li>
								<li><%= link_to "Logout", "/signout", id: "logout", role: "menuitem" %></li>
							</ul>
						</li>
					</ul>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>

		<div class="container">
			<%= yield %>
		</div>
	</div> <!-- Wrapper -->

	<div id="footer">
	  <div class="container">
	    <li class="text-muted"><a href="/about/index">About Us</a></li>
	    <li class="text-muted"><a href="/about/faq">FAQ</a></li>
	  </div>
	</div>

</body>
</html>
