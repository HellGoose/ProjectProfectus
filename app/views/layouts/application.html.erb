    <script>
      // set the date we're counting down to
      var target_date = (new Date('<%= Round.first.endTime.to_formatted_s(:iso8601) %>')).getTime();

      // variables for time units
      var days, hours, minutes, seconds;
       
      // get tag element
      var countdown = document.getElementById('counter');
     
      // update the tag with id "countdown" every 1 second
      setInterval(function () {
     
        // find the amount of "seconds" between now and target
        var current_date = new Date().getTime();
        var seconds_left = (target_date - current_date) / 1000;
     
        // do some time calculations
        days = parseInt(seconds_left / 86400);
        seconds_left = seconds_left % 86400;
         
        hours = parseInt(seconds_left / 3600);
        seconds_left = seconds_left % 3600;
         
        minutes = parseInt(seconds_left / 60);
        seconds = parseInt(seconds_left % 60);

        if (days <= 0 && hours <= 0 && minutes <= 0 && seconds < 0) {
          document.getElementById("counter").innerHTML = '<span>A new round has started!</span>';
        } else {
          if (hours < 10) {
            hours = "0" + hours;
          }
          if (minutes < 10) {
            minutes = "0" + minutes;
          }
          if (seconds < 10) {
            seconds = "0" + seconds;
          }
          // format countdown string + set tag value
          if (days > 0) {
            if (days == 1) {
              document.getElementById("counter").innerHTML = 
                '<b><span class="days">' + days + ' Day </span></b>'; 
            } else {
              document.getElementById("counter").innerHTML = 
                '<b><span class="days">' + days + ' Days </span></b>'; 
            }
          } else {
            document.getElementById("counter").innerHTML = 
            '<b><span class="hours">' + hours + '</span>' + //' Hours </span>'
            ' : <span class="minutes">' + minutes + '</span>' + //' Minutes. </span>' 
            ' : <span class="seconds">' + seconds + '</span></b> '//' Seconds </span>'
            ;
          }
        }
      }, 1000);
    </script>
