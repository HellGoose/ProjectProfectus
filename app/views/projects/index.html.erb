<!DOCTYPE html>
<html>
<head>
	<title>Profectus</title>
	<%= javascript_include_tag 'projects' %>
</head>
<body>

	<div id="categories">

	</div>

	<div id="search">
		<form action="">
			<input type="text" name="searchText">
			<input type="submit" value="Search">
		</form>
	</div>

	<div id="projects">
		<% @projects.each do |p| %>
		<div class="project">
			<%= link_to "", "/projects/" + p.id.to_s, class: "project_link" %>
			<div>
				<div class="image_container">
					<%= image_tag p.logoLink, class: "logo" %>
				</div>
				<p><%= p.description %></p>
			</div>
		</div>
		<% end %>
	</div>

</body>
</html>
