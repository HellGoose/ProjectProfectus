<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
    </div>
    <div class="form-group">
      <%= f.label :logoLink %>
      <%= f.text_field :logoLink, class: "form-control", placeholder: "Enter logo link" %>
    </div>
    <div class="form-group">
      <%= f.label :category_id, "Category"%>
      <%= f.collection_select(:category_id, Category.all, :id, :name) %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: "3", placeholder: "Short description (max 150 characters)" %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control tinymce", id: "content-editor", rows: "30", placeholder: "Content" %>
      <%= tinymce %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  </form>

<% end %>
