<%= javascript_include_tag "posts" %>

<% @posts.each do |p| %>
	<% next if p.isComment? %>
	<div class="col-xs-12 post">
		<div class="vote_container">
			<button id=<%= p.id.to_s %> class="glyphicon glyphicon-menu-up post_up_vote" aria-hidden="true"></button>
			<p><span id=<%= "votes#" + p.id.to_s %>><%= p.upvotes - p.downvotes %></span></p>
			<button id=<%=  p.id.to_s %> class="glyphicon glyphicon-menu-down post_down_vote" aria-hidden="true"></button>
		</div>
		<p class="user"><%= User.find(p.user_id).name + " - " + p.created_at.to_s %></p>
		<p class="content"><%= p.content %></p>
		<div class="bar">
			<a class="answer" id="<%= p.id.to_s %>">Answer</a>
		</div>
		<div class="answer_div" id="<%= "answer" + p.id.to_s %>">

		</div>
	</div>
<% end %>