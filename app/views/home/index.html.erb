<%= stylesheet_link_tag "home" %>
<%= stylesheet_link_tag "projects" %>

<%= javascript_include_tag "home" %>

<div class="col-xs-12">
	<%= image_tag "banner.png", id: "banner", class: "center-block img-responsive" %>
</div>

<div class="col-xs-9" id="donations">
	<p id="donated">Donated so far: <span id="donationAmount"><%= @mainPot.amount %></span>$</p>
	<a type="button" class="btn btn-default" id="donate">1UP</a>
</div>

<div class="col-xs-3" id="tabs">
	<ul class="nav nav-tabs">
		<li class="active"><a href="#top-tab" data-toggle="tab">Top Projects<i class="fa"></i></a></li>
		<li><a href="#news-tab" data-toggle="tab">News<i class="fa"></i></a></li>
	</ul>
	<div id="my-tab-content" class="tab-content">
		<div class="tab-pane active" id="top-tab">
			<h1 class="text-center">Top 8 Projects</h1>
			<div class="col-xs-12" id="projects">
				<%= render partial: 'projects/projectList', locals: { page: 1, projectsPerPage: 8 } %>
			</div>
		</div>
		<div class="tab-pane" id="news-tab">
			<p>News</p>
		</div>
	</div>
</div>