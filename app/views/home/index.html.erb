<!DOCTYPE html>
<html>
<head>
	<title>Profectus</title>
</head>
<body>

   <section class="page">
      <a type="button" class="btn btn-default" role="button" id="home" href="#">Profectus<a>

      <div class="btn-group" role="group" id="menu" aria-label"...">
         <a type="button" class="btn btn-default" role="button">Projects</a>
         <a type="button" class="btn btn-default" role="button">About</a>
         <div class="btn-group">
            <% if current_user %>
               <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" id="name">
                  <%= current_user.name %>
                  <span class="caret"></span>
               </button>
            <% else %>
               <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" id="name">
                  Login
                  <span class="caret"></span>
               </button>
            <% end %>
            <ul class="dropdown-menu" role="menu">
               <li><%= link_to "Login using Facebook", "/auth/facebook", id: "facebook_login", role: "menuitem" %></li>
               <li><%= link_to "Login using Google", "/auth/google", id: "google_login", role: "menuitem" %></li>
               <li><%= link_to "Account", "/users/user", id: "account", role: "menuitem" %></li>
               <li class="divider"></li>
      	      <li><%= link_to "Logout", "signout", id: "logout", role: "menuitem" %></li>
   		   </ul>
         </div>
	   </div>

      <%= image_tag "banner.png" %>

      <div id="newsTab">
         <ul class="nav nav-tabs">
            <li class="active"><a href="#info-tab" data-toggle="tab">Top Projects<i class="fa"></i></a></li>
            <li><a href="#address-tab" data-toggle="tab">News<i class="fa"></i></a></li>
         </ul>
      </div>

      <div id="donations">
         <p id="donated">Donated so far: 54974$</p>
         <a type="button" class="btn btn-default" id="donate">1UP</a>
      </div>
   </section>

</body>
</html>
