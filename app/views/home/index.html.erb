<%= stylesheet_link_tag "home" %>
<%= stylesheet_link_tag "projects" %>

<%= javascript_include_tag "home" %>

<div class="header">
	<div class="text-center">
		<p class="header-brand-text">Welcome to Profectus</p>
		<p class="header-donate-text">Donated so far: <span id="donationAmount"><%= @mainPot.amount %></span>$</p>
		<button type="button" class="btn btn-success" id="donate">1UP</button>
	</div>
</div>

<div id="tabs">
	<ul class="nav nav-pills">
		<li class="active"><a href="#top-tab" data-toggle="tab">Top Projects<i class="fa"></i></a></li>
		<li><a href="#news-tab" data-toggle="tab">News<i class="fa"></i></a></li>
	</ul>
	<div id="my-tab-content" class="tab-content">
		<div class="tab-pane active" id="top-tab">
			<h1 class="text-center">Top 8 Projects</h1>
			<div class="col-xs-12" id="projects">
				<%= render partial: 'projects/projectList', locals: { page: 1, projectsPerPage: 8 } %>
			</div>
		</div>
		<div class="tab-pane" id="news-tab">
			<%= render partial: 'news/front_news' %>
			<a href="/news/" id="more_news" class="btn btn-primary">Show more</a>
		</div>
	</div>
</div>
